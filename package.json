{
  "name": "mtdeck",
  "description": "TweetDeckをスマホアプリのように使えるようにするUserScript",
  "author": "mkizka",
  "homepage": "https://github.com/mkizka/MTDeck",
  "version": "1.8.2",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist web-ext-artifacts && run-s _build:* && yarn minify",
    "_build:pack": "rollup -c",
    "_build:lint": "web-ext lint -s dist",
    "_build:ext": "web-ext build -s dist -o",
    "minify": "rollup -c rollup.config.minify.js",
    "format": "prettier -w \"./*.(js|json)\" src",
    "_dev:pack": "rollup -c -w",
    "_dev:ext": "web-ext run -s dist -u tweetdeck.twitter.com",
    "_dev:ext:firefox": "yarn _dev:ext -p default-release",
    "_dev:ext:chrome": "yarn _dev:ext --target chromium",
    "dev:firefox": "rollup -c && run-p _dev:pack _dev:ext:firefox",
    "dev:chrome": "rollup -c && run-p _dev:pack _dev:ext:chrome",
    "_dev:serve": "serve dist",
    "dev:serve": "run-p _dev:pack _dev:serve"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/chrome": "^0.0.127",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.36.1",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-userscript-header": "^1.0.0",
    "serve": "^11.3.2",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "web-ext": "^5.4.1"
  }
}
